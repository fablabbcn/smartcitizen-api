<%= bootstrap_form_for @experiment, url: ui_experiment_path(@experiment) do |form| %>
  <% @experiment.errors.each do |attr, msg| %>
    <%= "#{attr} #{msg}" if @experiment.errors[attr].first == msg %>
  <% end %>
  <%= render partial: "fields", locals: { experiment: @experiment, form: form } %>
  <%= render layout: "ui/shared/back_link", locals: { back_href: ui_experiment_path(@experiment.id) } do %>
    <%= form.primary t(:edit_experiment_submit), class: "btn btn-primary w-100 w-md-auto" %>
  <% end %>
<% end %>
<% if authorize? @experiment, :destroy? %>
  <%= render layout: "ui/shared/danger_zone" do %>
    <div><%= link_to t(:edit_experiment_delete_experiment_submit), delete_ui_experiment_path(@experiment.id), class: "btn btn-danger w-100 w-md-auto" %></div>
  <% end %>
<%  end %>
