<%= bootstrap_form_for @experiment, url: ui_experiments_path do |form| %>
  <%= render partial: "fields", locals: { experiment: @experiment, form: form, include_hardware_info: true } %>
  <%= render partial: "ui/shared/form_buttons", locals: { form: form, back_href: ui_user_path(current_user.username), submit_label: t(:new_experiment_submit) } %>
<% end %>
